<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmovies.MovieDetails">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textSize="28sp"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_release_date"
        android:layout_below="@id/tv_title"
        android:layout_alignStart="@id/tv_title"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_rating"
        android:layout_below="@id/tv_release_date"
        android:layout_alignStart="@id/tv_release_date"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_title"
        android:id="@+id/iv_movie_art" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_synopsis"
        android:layout_margin="8dp"
        android:layout_below="@id/tv_user_rating"
        android:layout_toStartOf="@id/iv_movie_art"/>


</RelativeLayout>
